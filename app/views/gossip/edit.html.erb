<h1>Editer un Gossip</h1>

<%= form_for @gossip do |f| %>

    <div class="form-group">
        <label>Titre du Gossip</label>
        <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
        <label>Contenus du Gossip</label>
        <%= f.text_area :content, class: 'form-control' %>
    </div>

    <div class="form-group">
        <button type="submit">Modifier le Gossip</button>
    </div>

<%= link_to "Delete", gossip_path(@gossip), :confirm => "Are you sure?", :method => :delete %>

<% end %>
